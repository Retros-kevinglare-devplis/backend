<style>
    body{
        font-size:14px;
    }
    .simple-login-container{
        width:300px;
        max-width:100%;
        margin:50px auto;
    }
    .simple-login-container h2{
        text-align:center;
        font-size:20px;
    }

    .btn-login{
        background-color:#5286F3;
        color:#fff;
        margin-top: 1rem;
    }

    .form-group {
        margin-top: 1rem;
    }
</style>
<div class="simple-login-container">
  <h2>Sing In</h2>
  <hr>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% form_authenticity_token %>
      <div class="row form-group">
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="row form-group">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="row form-group">
        <%= f.submit "Submit", class: "btn btn-block btn-login"%>
      </div>
    <% end %>
  </div>
</div>