<%= form_with(model: @user, url: user.persisted? ? admin_user_path(user) : admin_users_path) do |f| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <b><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</b>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :email, style: "display: block" %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :username, style: "display: block" %>
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :first_name, style: "display: block" %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :last_name, style: "display: block" %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :password, style: "display: block" %>
        <%= f.text_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="col-6">
      <div class="form-group">
        <%= f.label :password_confirmation, style: "display: block" %>
        <%= f.text_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
  </div>

  <br>
  <div>
    <%= f.submit 'Submit', :class => 'btn btn-success' %>
  </div>
<% end %>
