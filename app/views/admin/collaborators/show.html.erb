<div class="row">
  <div class="col-8">
    <h2>Collaborator: <%= @collaborator.user.email %></h2>
  </div>
  <div class="col-4 d-flex align-items-center justify-content-end">
    <%= link_to "Edit", edit_admin_collaborator_path(@collaborator.id), class: 'btn btn-warning btn-sm m-2' %>
    <%= link_to "Destroy", admin_collaborator_path(@collaborator.id), class: 'btn btn-danger btn-sm' %>
  </div>
</div>
<hr>
<h3>Info</h3>
<div id="collaborator">
  <table class="table table-response table-striped table-bordered">
    <tbody>
    <tr>
      <th>ID</th>
      <td><%= @collaborator.id %></td>
    </tr>
    <tr>
      <th>User</th>
      <td><%= link_to @collaborator.user.username, admin_user_path(@collaborator.user_id) %></td>
    </tr>
    <tr>
      <th>Team</th>
      <td><%= link_to @collaborator.team.title, admin_user_path(@collaborator.team_id) %></td>
    </tr>
    <tr>
      <th>Status</th>
      <td><%= @collaborator.status %></td>
    </tr>
    <% if @collaborator.invite.present? %>
      <tr>
        <th>Invite</th>
        <td><%= @collaborator.invite %></td>
      </tr>
    <% end %>
    <tr>
      <th>Created at</th>
      <td><%= @collaborator.created_at.iso8601 %></td>
    </tr>
    <tr>
      <th>Updated at</th>
      <td><%= @collaborator.updated_at.iso8601 %></td>
    </tr>
    </tbody>
  </table>
</div>
